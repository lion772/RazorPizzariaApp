@page
@model RazorPizzaApp.Pages.OrdersModel
@{
}

<h3>Orders</h3>

<hr />

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>PizzaName</th>
            <th>BasePrice</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model.Orders)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.PizzaName</td>
                <td>@order.BasePrice</td>
            </tr>
        }

    </tbody>
</table>

